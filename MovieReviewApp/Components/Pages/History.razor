@page "/history"
@attribute [StreamRendering]

<PageTitle>History</PageTitle>

<h1>History</h1>

@if (Pastevents == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Person</th>
                <th>Movie</th>
                <th>Movie</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pastevent in Pastevents)
            {
                @if (pastevent != null)
                {
                    <tr>
                        <td>@pastevent.StartDate.ToShortDateString() - @pastevent.EndDate.ToShortDateString()</td>
                        <td>@pastevent.Person</td>
                        <td>@pastevent.Movie</td>
                        <td><a href="@pastevent.IMDb">link</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
}


