@page "/discussions"
@using MovieReviewApp.Components.Partials

<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link @((activeTab == "stats") ? "active" : "")" @onclick='() => activeTab = "stats"'>Stats</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @((activeTab == "list") ? "active" : "")" @onclick='() => activeTab = "list"'>Discussions</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @((activeTab == "upload") ? "active" : "")" @onclick='() => activeTab = "upload"'>Audio Upload</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @((activeTab == "processing") ? "active" : "")" @onclick='() => activeTab = "processing"'>Processing Audio</a>
    </li>
</ul>
<br />
@if (activeTab == "stats")
{
    <Stats />
}
@if (activeTab == "list")
{
    <DiscussionsList />
}
else if (activeTab == "upload")
{
    <UploadAudio/>
}
else if (activeTab == "processing")
{
    <Processing />
}

<style>
    .nav-item {
        cursor: pointer;
    }
</style>

@code {
    private string activeTab = "stats"; // Default tab
}