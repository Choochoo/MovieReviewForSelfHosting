@* Settings.razor *@
@page "/settings"
@attribute [StreamRendering]

<PageTitle>Settings</PageTitle>
<h1>Settings</h1>

<div class="container">
    <div class="row mb-3">
        <div class="col-sm-12">
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" @bind="RespectOrder" id="respectOrder">
                <label class="form-check-label" for="respectOrder">
                    Respect Order
                </label>
                <button type="button" class="btn btn-primary ms-3" @onclick="SaveRespectOrder">Save</button>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-12">
            <label>Start Date:</label>
            <div class="d-flex flex-wrap align-items-center">
                <InputDate @bind-Value="StartDate" class="form-control d-inline-block w-auto me-2 mb-2" />
                <button type="button" class="btn btn-primary mb-2" @onclick="SaveDate">Save</button>
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-sm-12">
            <label>Occurrence:</label>
            <div class="d-flex flex-wrap align-items-center">
                <span class="me-2 mb-2">Every</span>
                <InputNumber @bind-Value="TimeCount" class="form-control d-inline-block w-auto me-2 mb-2" />
                <InputSelect @bind-Value="TimePeriod" class="form-control d-inline-block w-auto me-2 mb-2">
                    <option value="">Time Period</option>
                    @foreach (var period in TimePeriods)
                    {
                        <option value="@period.Value">@period.Value@(TimeCount > 1 ? "s" : "")</option>
                    }
                </InputSelect>
                <button type="button" class="btn btn-primary mb-2" @onclick="SaveOccurance">Save</button>
            </div>
        </div>
    </div>

    <hr />

    @if (People == null)
    {
        <p><em>Loading...</em></p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th style="width: 100px">Order</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var person in People.OrderBy(p => p?.Order))
                    {
                        @if (person != null)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="me-2">@person.Order</span>
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-secondary"
                                                    @onclick="async () => await MoveUp(person)"
                                                    disabled="@(person.Order <= 1)">
                                                ↑
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-secondary"
                                                    @onclick="async () => await MoveDown(person)"
                                                    disabled="@(person.Order >= People.Count)">
                                                ↓
                                            </button>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @if (person.IsEditing)
                                    {
                                        <input type="text" @bind="person.Name" class="form-control" />
                                    }
                                    else
                                    {
                                        @person.Name
                                    }
                                </td>
                                <td>
                                    @if (person.IsEditing)
                                    {
                                        <button type="button" class="btn btn-primary me-2 mb-2" @onclick="() => Save(person)">Save</button>
                                        <button type="button" class="btn btn-secondary mb-2" @onclick="() => Cancel(person)">Cancel</button>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-secondary me-2 mb-2" @onclick="() => Edit(person)">Edit</button>
                                        <button type="button" class="btn btn-danger mb-2" @onclick="() => Delete(person)">Delete</button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    <tr>
                        <td></td>
                        <td>
                            <input style="width:70%" type="text" @bind="@NewPerson" class="form-control mb-2" />
                        </td>
                        <td>
                            <button type="button" class="btn btn-primary mb-2" @onclick="AddPerson">Add</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    }
</div>

<style>
    .mb-2 {
        margin-bottom: 0.5rem !important;
    }
</style>