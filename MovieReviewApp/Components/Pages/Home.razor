@page "/"
@using MovieReviewApp.Components.Partials
@using MovieReviewApp.Extensions
@using MovieReviewApp.Services

<PageTitle>Movie Review</PageTitle>

<div class="container">
    @if (RecentUpdates.Any() && showUpdates)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <h5>Recent Updates:</h5>
            <ul class="mb-0">
                @foreach (var update in RecentUpdates.Take(3))
                {
                    <li>@update.Description - @update.LastUpdateTime.ToLocalTime().ToString("MM/dd/yyyy h:mm tt")</li>
                }
            </ul>
            <button type="button" class="btn-close" @onclick="DismissUpdates"></button>
        </div>
    }

    @if (IsCurrentPhaseAwardPhase)
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-warning">
                    <h4>🏆 Awards Month!</h4>
                    <p>Vote for your favorites</p>
                </div>
                <AwardVoting CurrentDate="DateProvider.Now" /> 
            </div>
        </div>
    }
    else if (CurrentEvent != null)
    {
        <div class="row">
            <div class="col-md-6">
                <Phase MovieEvent="CurrentEvent" />
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Review Questions</h5>
                    </div>
                    <div class="card-body">
                        <ol>
                            <li>Did I like the movie?</li>
                            <li>Am I glad I watched the movie?</li>
                            <li>Do I think I'd ever watch it again?</li>
                            <li>Would you ever recommend this movie?</li>
                            <li>What was my favorite part of the movie?</li>
                            <li>What was my least favorite part of the movie?</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (NextEvent != null)
    {
        <div class="alert alert-info">
            <p class="mb-0">Next movie review cycle starts @NextEvent.StartDate.ToString("MMMM d, yyyy")</p>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            <p class="mb-0">Please add some names in Settings to get started</p>
        </div>
    }

    @if (NextEvent != null)
    {
        <div class="row mt-4">
            <div class="col-md-6">
                <Phase MovieEvent="NextEvent" />
            </div>
        </div>
    }

    @if (Phases?.Any() ?? false)
    {
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="timeline">
                    @foreach (var phase in Phases.Where(p => p.EndDate >= DateProvider.Now))
                    {
                        var futureEvents = phase.Events.Where(x =>
                        x != CurrentEvent &&
                        x != NextEvent &&
                        x.EndDate >= DateProvider.Now).ToList();

                        @if (futureEvents.Any())
                        {
                            <div class="timeline-item">
                                <h5>Phase @phase.Number (@phase.StartDate.ToString("MMMM yyyy") - @phase.EndDate.ToString("MMMM yyyy"))</h5>
                                @foreach (var movieEvent in futureEvents)
                                {
                                    <div class="timeline-content">
                                        <span class="date">@movieEvent.StartDate.ToString("MMMM yyyy")</span> -
                                        <span class="person">@(movieEvent.Person ?? "TBD")</span>
                                    </div>
                                }
                            </div>
                        }

                        @if (phase.EndDate >= DateProvider.Now &&
                       phase.Number % db.GetAwardSettings().PhasesBeforeAward == 0)
                        {
                            var awardMonthStart = phase.EndDate.AddDays(1);
                            var awardMonthEnd = awardMonthStart.AddMonths(1).AddDays(-1);

                            // Only skip showing this specific award month if it's the current one
                            var isThisTheCurrentAwardPhase = DateProvider.Now.IsWithinRange(awardMonthStart, awardMonthEnd);

                            @if (!isThisTheCurrentAwardPhase)
                            {
                                var eligibleMovies = db.GetAllMovieEvents()
                                .Where(m => m.PhaseNumber <= phase.Number &&
                                m.PhaseNumber > phase.Number - db.GetAwardSettings().PhasesBeforeAward &&
                                !string.IsNullOrEmpty(m.Movie))
                                .Select(m => m.Movie)
                                .ToList();

                                <div class="timeline-item award-period">
                                    <h5>🏆 Awards Month</h5>
                                    <div class="timeline-content">
                                        <span class="date">@awardMonthStart.ToString("MMMM yyyy")</span>
                                        @if (eligibleMovies.Any())
                                        {
                                            <div class="mt-2">
                                                <div class="font-semibold mb-1">Eligible Movies:</div>
                                                <div class="flex flex-wrap gap-2">
                                                    @{
                                                        var rand = new Random(phase.Number);
                                                        var randomizedMovies = eligibleMovies
                                                        .Select(m => new { Movie = m, Order = rand.Next() })
                                                        .OrderBy(x => x.Order)
                                                        .Select(x => x.Movie)
                                                        .ToList();
                                                    }
                                                    @foreach (var movie in randomizedMovies)
                                                    {
                                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm bg-blue-100 text-blue-800">
                                                            [@movie.Trim()]
                                                        </span>
                                                    }
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>
            </div>
        </div>
    }
</div>