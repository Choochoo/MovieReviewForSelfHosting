@page "/"
@using MovieReviewApp.Components.Partials
@using MovieReviewApp.Extensions
@using MovieReviewApp.Models
@using MovieReviewApp.Models.ViewModels


<PageTitle>Movie Review</PageTitle>

<div class="container">

    <!-- Loading State -->
    @if (!_isInitialized)
    {
        <div class="loading-indicator">
            <h5 class="loading-text">Loading Movie Night</h5>
            <div class="spinner-wrapper">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
            <div class="loading-dots">
                <span class="dot"></span>
                <span class="dot"></span>
                <span class="dot"></span>
            </div>
        </div>
        <div class="loading-container">
            <div class="row">
                <div class="col-md-6">
                    <div class="placeholder-card">
                        <div class="placeholder-header"></div>
                        <div class="placeholder-body">
                            <div class="placeholder-line"></div>
                            <div class="placeholder-line"></div>
                            <div class="placeholder-line short"></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="placeholder-card">
                        <div class="placeholder-header"></div>
                        <div class="placeholder-body">
                            <div class="placeholder-line"></div>
                            <div class="placeholder-line"></div>
                            <div class="placeholder-line"></div>
                            <div class="placeholder-line short"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Main Content with Fade-in -->
    <div class="content-wrapper @(_isInitialized ? "fade-in" : "")">
        @if (IsCurrentPhaseAwardPhase)
        {
            <div class="row">
                <div class="col-12">
                    <div class="alert alert-warning">
                        <h4>üèÜ Awards Month!</h4>
                        <p>Vote for your favorites</p>
                    </div>
                    <AwardVoting CurrentDate="DateProvider.Now" />
                </div>
            </div>
        }
        else if (CurrentEvent != null)
        {
            @if (IsShowingPastEvent)
            {
                <div class="alert alert-info mb-3">
                    <i class="bi bi-info-circle"></i> No current movie event scheduled. Showing the most recent past event.
                </div>
            }
            <div class="row">
                <div class="col-md-6">
                    <Phase MovieEvent="CurrentEvent" />
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Review Questions</h5>
                        </div>
                        <div class="card-body">
                            @if (DiscussionQuestions?.Any() == true)
                            {
                                <ol>
                                    @foreach (var question in DiscussionQuestions)
                                    {
                                        <li>@question.Question</li>
                                    }
                                </ol>
                            }
                            else
                            {
                                <ol>
                                    <li>Did I like the movie?</li>
                                    <li>Am I glad I watched the movie?</li>
                                    <li>Do I think I'd ever watch it again?</li>
                                    <li>Would you ever recommend this movie?</li>
                                    <li>What was my favorite part of the movie?</li>
                                    <li>What was my least favorite part of the movie?</li>
                                    <li>What was my favorite line of the movie?</li>
                                </ol>
                                <div class="mt-2">
                                    <small class="text-muted">
                                        <i class="bi bi-info-circle"></i>
                                        These are the default questions. You can customize them in <a href="/settings">Settings</a>.
                                    </small>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }

        @if (NextEvent != null)
        {
            <div class="row mt-4">
                <div class="col-md-6">
                    <Phase MovieEvent="NextEvent" />
                </div>
            </div>
        }

        @if (StructuredTimeline != null)
        {
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="chronological-timeline">
                        @* Current Phase *@
                        @if (StructuredTimeline.CurrentPhase != null)
                        {
                            <PhaseGroupRenderer Phase="@StructuredTimeline.CurrentPhase" />
                        }

                        @* Current Award *@
                        @if (StructuredTimeline.CurrentAward != null)
                        {
                            var award = StructuredTimeline.CurrentAward;
                            <div class="timeline-item award-item"
                                 style="background-color: var(--surface-color);
                                        border: 2px solid var(--accent-primary);
                                        border-radius: 0.75rem;
                                        padding: 1.5rem;
                                        margin-bottom: 2rem;">
                                <h5 style="color: var(--accent-primary); margin-bottom: 1rem;">
                                    <i class="bi bi-trophy-fill me-2"></i>
                                    Awards Event @award.AwardsEventNumber
                                </h5>
                                <div style="color: var(--text-primary);">
                                    <span style="color: var(--accent-secondary); font-weight: 600;">
                                        @award.Month.ToLocalDisplay().ToString("MMMM yyyy")
                                    </span>
                                    <span class="badge bg-primary ms-2">Current</span>
                                </div>
                                @if (award.EligibleMovies.Any())
                                {
                                    <div class="mt-3" style="color: var(--text-primary);">
                                        <strong style="color: var(--accent-secondary);">Eligible Movies:</strong>
                                        <div class="d-flex flex-wrap gap-2 mt-2">
                                            @foreach (string movie in award.EligibleMovies)
                                            {
                                                <span class="badge"
                                                      style="background-color: var(--accent-tertiary);
                                                             color: var(--surface-color);
                                                             padding: 0.5rem 0.75rem;
                                                             font-size: 0.875rem;">
                                                    @movie
                                                </span>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }

                        @* Future Timeline: Merge Phases and Awards chronologically *@
                        @{
                            var futureTimeline = StructuredTimeline.FuturePhases
                                .Select(p => new { Month = p.StartMonth, Type = "Phase", Phase = p, Award = (TimelineItem?)null })
                                .Concat(StructuredTimeline.FutureAwards.Select(a => new { Month = a.Month, Type = "Award", Phase = (TimelinePhase?)null, Award = a }))
                                .OrderBy(x => x.Month)
                                .ToList();
                        }

                        @foreach (var item in futureTimeline)
                        {
                            @if (item.Type == "Phase" && item.Phase != null)
                            {
                                <PhaseGroupRenderer Phase="@item.Phase" />
                            }
                            else if (item.Type == "Award" && item.Award != null)
                            {
                                <div class="timeline-item award-item"
                                     style="background-color: var(--surface-color);
                                            border: 2px solid var(--accent-primary);
                                            border-radius: 0.75rem;
                                            padding: 1.5rem;
                                            margin-bottom: 2rem;">
                                    <h5 style="color: var(--accent-primary); margin-bottom: 1rem;">
                                        <i class="bi bi-trophy-fill me-2"></i>
                                        Awards Event @item.Award.AwardsEventNumber
                                    </h5>
                                    <div style="color: var(--text-primary);">
                                        <span style="color: var(--accent-secondary); font-weight: 600;">
                                            @item.Award.Month.ToLocalDisplay().ToString("MMMM yyyy")
                                        </span>
                                        <span class="badge bg-warning text-dark ms-2">Upcoming</span>
                                    </div>

                                    @* Show eligible movies for this award event (pre-populated from service layer) *@
                                    @if (item.Award.EligibleMovies.Any())
                                    {
                                        <div class="mt-3" style="color: var(--text-primary);">
                                            <strong style="color: var(--accent-secondary);">Eligible Movies:</strong>
                                            <div class="d-flex flex-wrap gap-2 mt-2">
                                                @foreach (string movie in item.Award.EligibleMovies)
                                                {
                                                    <span class="badge"
                                                          style="background-color: var(--accent-tertiary);
                                                                 color: var(--surface-color);
                                                                 padding: 0.5rem 0.75rem;
                                                                 font-size: 0.875rem;">
                                                        @movie
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

