@using MovieReviewApp.Extensions

<div class="timeline-item timeline-item-future-person">
    <h5 class="timeline-heading-primary">
        <i class="bi bi-calendar-event me-2"></i>
        Future Movie Event
    </h5>
    <div class="timeline-content">
        <div class="timeline-date mb-2">@EventDate.ToLocalDisplay().ToString("MMMM yyyy")</div>
        <div class="timeline-person" style="font-size: 1.1rem;">
            <i class="bi bi-person-circle me-2"></i>
            <strong>@PersonName</strong>'s movie selection
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public string PersonName { get; set; } = string.Empty;

    [Parameter, EditorRequired]
    public DateTime EventDate { get; set; }
}