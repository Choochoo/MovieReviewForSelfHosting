@inherits LayoutComponentBase
@using Microsoft.Extensions.Options
@using MovieReviewApp.Models
@using MovieReviewApp.Services
@using MovieReviewApp.Components.Partials
@inject IOptions<AppSettings> AppSettings
@inject NavigationManager Navigation
@inject SecretsManager SecretsManager
@inject ThemeService ThemeService

@if (IsFirstRunSetup)
{
    <div class="page-no-sidebar">
        @Body
    </div>
}
else
{
    <div class="page">
        <div class="sidebar @(AppSettings.Value.IsFamilyFriendly ? "sidebar-family" : "sidebar-general")">
            <NavMenu />
        </div>
        <main>
            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>
}
<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
<style>
    .page {
        display: flex;
        flex-direction: row;
        min-height: 100vh;
    }

    .sidebar {
        width: 250px;
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
        z-index: 1000;
    }

    .sidebar-family {
        background-image: linear-gradient(180deg, rgb(103, 5, 5) 0%, #473a06 70%);
    }

    .sidebar-general {
        background-image: linear-gradient(180deg, rgb(5, 39, 103) 0%, #3a0647 70%);
    }

    main {
        width: calc(100% - 250px);
        margin-left: 250px;
    }

    .page-no-sidebar {
        width: 100%;
        min-height: 100vh;
    }

    /* Mobile viewport and layout fixes */
    @@media (max-width: 768px) {
        .page {
            flex-direction: column;
            width: 100vw;
            min-width: 100vw;
            overflow-x: hidden;
        }

        .sidebar {
            width: 100vw;
            position: fixed;
            top: 0;
            left: 0;
            height: auto;
            z-index: 1001;
            transform: translateY(-100%);
            transition: transform 0.3s ease;
        }

        .sidebar.show-mobile {
            transform: translateY(0);
        }

        main {
            margin-left: 0;
            width: 100vw;
            min-width: 100vw;
            padding: 0 15px;
            box-sizing: border-box;
        }

        .content {
            width: 100%;
            max-width: 100vw;
            overflow-x: hidden;
            padding: 1rem 0;
        }

        /* Force full width for mobile */
        body {
            width: 100vw;
            min-width: 100vw;
            overflow-x: hidden;
        }
    }
</style>

@code {
    private bool IsFirstRunSetup => Navigation.Uri.Contains("/setup", StringComparison.OrdinalIgnoreCase) || SecretsManager.IsFirstRun;

    protected override async Task OnInitializedAsync()
    {
        await ThemeService.InitializeAsync();
    }
}